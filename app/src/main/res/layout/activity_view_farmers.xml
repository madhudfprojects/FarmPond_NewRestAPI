        <ImageButton
            android:id="@+id/downarrow_IB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:paddingTop="5dp"
            android:layout_marginTop="5dp"
            android:visibility="visible"
            android:background="@drawable/ic_arrow_drop_down_white_24dp"/>

        <ImageButton
            android:id="@+id/uparrow_IB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:paddingTop="5dp"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            android:background="@drawable/ic_arrow_drop_up_white_24dp"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/spinnerlayout_LL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorwhite"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal">

        <TableRow
            android:id="@+id/tableR1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:paddingLeft="5dp"
                android:text="Year"
                android:textColor="#5C5757"
                android:fontFamily="serif"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="110dp"
                android:paddingLeft="5dp"
                android:text="State"
                android:textColor="#5C5757"
                android:fontFamily="serif"
                android:textStyle="bold"/>
        </TableRow>

        <TableRow
            android:id="@+id/tableR2"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal">

            <Spinner
                android:id="@+id/yearlist_farmer_SP"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/spinnerarrow2"
                android:paddingLeft="5dp"
                android:popupBackground="@drawable/layout_background" />

            <Spinner
                android:id="@+id/statelist_farmer_SP"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/spinnerarrow2"
                android:paddingLeft="5dp"
                android:popupBackground="@drawable/layout_background" />
        </TableRow>


        <TableRow
            android:id="@+id/tableT"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:paddingLeft="5dp"
                android:text="District"
                android:textColor="#5C5757"
                android:fontFamily="serif"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="98dp"
                android:paddingLeft="8dp"
                android:text="Taluk"
                android:textColor="#5C5757"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:visibility="visible"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal">

            <Spinner
                android:id="@+id/districtlist_farmer_SP"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/spinnerarrow2"
                android:paddingLeft="5dp"
                android:popupBackground="@drawable/layout_background" />


            <Spinner
                android:id="@+id/taluklist_farmer_SP"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/spinnerarrow2"
                android:paddingLeft="5dp"
                android:popupBackground="@drawable/layout_background" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="80dp"
                android:textColor="#5C5757"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:text="Grampanchayat"
                android:paddingLeft="5dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Village"
                android:layout_marginRight="30dp"
                android:textColor="#5C5757"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:paddingLeft="5dp"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:visibility="visible"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal">


            <Spinner
                android:id="@+id/grampanchayatlist_farmer_SP"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/spinnerarrow2"
                android:paddingLeft="5dp"
                android:popupBackground="@drawable/layout_background" />


            <Spinner
                android:id="@+id/villagelist_farmer_SP"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/spinnerarrow2"
                android:paddingLeft="5dp"
                android:popupBackground="@drawable/layout_background" />



        </TableRow>
    </LinearLayout>
