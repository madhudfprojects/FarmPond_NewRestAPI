<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/studentlist_LL"
    android:orientation="vertical"
    android:background="@color/colorwhite">

    <include
        android:id="@+id/toolbar_n_actionbar"
        layout="@layout/common_titlebar" />


    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:id="@+id/layoutview"
        android:background="@color/colorAccent"
        android:layout_margin="10dp">


        <TextView
            android:id="@+id/viewspinner_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hide"
            android:textSize="15sp"
            android:gravity="center"
            android:padding="5dp"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:fontFamily="serif"
            android:textStyle="bold"/>


        <!--        <ImageButton-->
        <!--            android:id="@+id/search_IB"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:gravity="center"-->
        <!--            android:padding="5dp"-->
        <!--            android:paddingTop="5dp"-->
        <!--            android:layout_marginTop="5dp"-->
        <!--            android:background="@drawable/ic_search_black_24dp"/>-->

        <ImageButton
            android:id="@+id/downarrow_IB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:paddingTop="5dp"
            android:layout_marginTop="5dp"
            android:visibility="visible"
            android:background="@drawable/ic_arrow_drop_down_white_24dp"/>

        <ImageButton
            android:id="@+id/uparrow_IB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:paddingTop="5dp"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            android:background="@drawable/ic_arrow_drop_up_white_24dp"/>


    </LinearLayout>

        <LinearLayout
            android:id="@+id/spinnerlayout_LL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorwhite"
            android:orientation="vertical"
            android:visibility="visible"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="2">
            <RelativeLayout
                android:id="@+id/rel_yearlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_below="@+id/mainlinearlayout_ll"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/spinner_layout"
                    android:orientation="horizontal"
                    tools:ignore="UselessParent">

                    <Spinner
                        android:id="@+id/yearlist_farmer_SP"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:dropDownVerticalOffset="35dp"
                        android:spinnerMode="dropdown" />


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="-4dp"
                    android:background="#FFFFFF"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:text="Year"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="10sp" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rel_statelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_below="@+id/mainlinearlayout_ll"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/spinner_layout"
                    android:orientation="horizontal"
                    tools:ignore="UselessParent">

                    <Spinner
                        android:id="@+id/statelist_farmer_SP"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:dropDownVerticalOffset="35dp"
                        android:spinnerMode="dropdown" />


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="-4dp"
                    android:background="#FFFFFF"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:text="State"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="10sp" />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="2">
            <RelativeLayout
                android:id="@+id/rel_districtlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_below="@+id/mainlinearlayout_ll"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/spinner_layout"
                    android:orientation="horizontal"
                    tools:ignore="UselessParent">

                    <Spinner
                        android:id="@+id/districtlist_farmer_SP"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:dropDownVerticalOffset="35dp"
                        android:spinnerMode="dropdown" />


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="-4dp"
                    android:background="#FFFFFF"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:text="District"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="10sp" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rel_taluklayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_below="@+id/mainlinearlayout_ll"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/spinner_layout"
                    android:orientation="horizontal"
                    tools:ignore="UselessParent">

                    <Spinner
                        android:id="@+id/taluklist_farmer_SP"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:dropDownVerticalOffset="35dp"
                        android:spinnerMode="dropdown" />


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="-4dp"
                    android:background="#FFFFFF"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:text="Taluk"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="10sp" />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="2">
            <RelativeLayout
                android:id="@+id/rel_panchyathlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_below="@+id/mainlinearlayout_ll"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/spinner_layout"
                    android:orientation="horizontal"
                    tools:ignore="UselessParent">

                    <Spinner
                        android:id="@+id/grampanchayatlist_farmer_SP"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:dropDownVerticalOffset="35dp"
                        android:spinnerMode="dropdown" />


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="-4dp"
                    android:background="#FFFFFF"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:text="Grampanchayat"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="10sp" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rel_vilagelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_below="@+id/mainlinearlayout_ll"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/spinner_layout"
                    android:orientation="horizontal"
                    tools:ignore="UselessParent">

                    <Spinner
                        android:id="@+id/villagelist_farmer_SP"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:dropDownVerticalOffset="35dp"
                        android:spinnerMode="dropdown" />


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="-4dp"
                    android:background="#FFFFFF"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:text="Village"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="10sp" />
            </RelativeLayout>
        </LinearLayout>
        </LinearLayout>
    <!--////////////////////////////////////////-->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/x"
        android:background="#ffffff"
        android:visibility="visible"
        android:layout_margin="5dp"
        >
        <EditText
            android:id="@+id/search_et"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:ems="10"
            android:background="#ececec"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:drawableTint="#4a4a4a"
            android:singleLine="true"
            android:hint="Search"
            android:textColor="#000"
            android:fontFamily="serif"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/ic_search_black_24dp"
            >

            <requestFocus />
        </EditText>

    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ListView
        android:id="@+id/farmer_LISTVIEW"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/layout_background"
        android:dividerHeight="2px"
        android:fillViewport="false"
        android:layout_marginTop="10dp"
        android:visibility="visible"
        />


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/addfarmerdetails_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:src="@drawable/add"
            android:layout_margin="16dp"
            android:textSize="50dp"
            android:text=" + "
             />

    </FrameLayout>

<!--    <View-->
<!--        android:id="@+id/toolbar_shadow"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="4dp"-->
<!--        android:layout_below="@+id/toolbar"-->
<!--        android:background="@drawable/toolbar_shadow" />-->
    <LinearLayout
        android:id = "@+id/linearLayout_name_LL"
        android:layout_width = "fill_parent"
        android:layout_height = "wrap_content"
        android:background = "@drawable/layout_background"
        android:layout_margin="10dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/Namelabel_new_TV"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="start"
            android:text="Student List"
            android:textColor="@color/colorwhite"
            android:textSize="15dp"
            android:padding="2dp"
            android:paddingTop="2dp"
            android:layout_margin="5dp"
            android:fontFamily="serif"/>

    </LinearLayout>
    <TableLayout
        android:id="@+id/tableLayout_stulist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:stretchColumns="*"
        android:visibility="gone">
    </TableLayout>

</LinearLayout>
