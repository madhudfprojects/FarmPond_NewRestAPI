<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="3dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="5dp">

    <LinearLayout
        android:id="@+id/farmerlist_ll"
        android:weightSum="5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible"
            android:layout_weight="1"
            android:id="@+id/farmerimagelayout_ll">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="4dp"
                android:layout_gravity="center"
                app:civ_border_width="1dp"
                android:src="@mipmap/ic_launcher_round"
                android:id="@+id/clustfarmerimage_iv"/>

        </LinearLayout>


        <TextView
            android:id="@+id/txt_Fname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="test"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="13sp" />
        <TextView
            android:id="@+id/txt_mobileno"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:layout_weight = "1"
            android:text = "test"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="13sp"
            android:textColor="@android:color/black"
            />
        <TextView
            android:id="@+id/txt_Ponds"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:layout_weight = "1"
            android:text = "test"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="13sp"
            android:textColor="@android:color/black"
            />

        <TextView
            android:id="@+id/txt_location"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:layout_weight = "1"
            android:text = "test"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="13sp"
            android:textColor="@android:color/black"
            />

        <TextView
            android:id="@+id/txt_FempId"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:text = "test"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:visibility="gone"
            android:textSize="13sp"
            android:textColor="@android:color/black"
            />
        <TextView
            android:id="@+id/txt_EmpId"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:text = "test"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:visibility="gone"
            android:textSize="13sp"
            android:textColor="@android:color/black"
            />
        <TextView
            android:id="@+id/txt_YearId"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:text = "test"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:visibility="gone"
            android:textSize="13sp"
            android:textColor="@android:color/black"
            />

        <TextView
            android:id="@+id/txt_Type"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:text = "test"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:visibility="gone"
            android:textSize="13sp"
            android:textColor="@android:color/black"
            />
    </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
