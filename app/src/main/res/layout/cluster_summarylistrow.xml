            android:textSize="15sp" />
        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="@android:color/darker_gray"/>
        <TextView
            android:id="@+id/txt_Process"
            android:layout_width = "match_parent"
            android:layout_height = "40dp"
            android:layout_weight = "1"
