<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/relativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="3dp"
    android:orientation="vertical"
    android:background="#f7f7f7"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        android:background="#f7f7f7"
        card_view:contentPadding="5dp">

    <LinearLayout
        android:id="@+id/ll1"
        android:weightSum="6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#f7f7f7"
        android:layout_gravity="center"
        android:gravity="center">


        <TextView
            android:id="@+id/txt_Ename"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:textSize="11sp"
            android:text = "test"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            />

        <TextView
            android:id="@+id/txt_All"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="test"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:background="#2255a4"
            android:textSize="13sp" />
        <TextView
            android:id="@+id/txt_Process"
            android:layout_width = "match_parent"
            android:layout_height = "40dp"
            android:layout_weight = "1"
            android:text = "test"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="13sp"
            android:background="#ffb848"
            android:textColor="@android:color/white"
            />
        <TextView
            android:id="@+id/txt_Pending"
            android:layout_width = "match_parent"
            android:layout_height = "40dp"
            android:layout_weight = "1"
            android:text = "test"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="13sp"
            android:background="#27a9e3"
            android:textColor="@android:color/white"
            />

        <TextView
            android:id="@+id/txt_Approved"
            android:layout_width = "match_parent"
            android:layout_height = "40dp"
            android:layout_weight = "1"
            android:text = "test"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="13sp"
            android:background="#28b779"
            android:textColor="@android:color/white"
            />
        <TextView
            android:id="@+id/txt_Rejected"
            android:layout_width = "match_parent"
            android:layout_height = "40dp"
            android:layout_weight = "1"
            android:text = "test"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="13sp"
            android:background="#f74d4d"
            android:textColor="@android:color/white"
            />
        <TextView
            android:id="@+id/txt_empId"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:text = "test"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:visibility="gone"
            android:textSize="13sp"
            android:textColor="@android:color/black"
            />
        <TextView
            android:id="@+id/txt_YearId"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:text = "test"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:visibility="gone"
            android:textSize="13sp"
            android:textColor="@android:color/black"
            />
        <TextView
            android:id="@+id/txt_UserId"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:text = "test"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:visibility="gone"
            android:textSize="13sp"
            android:textColor="@android:color/black"
            />

    </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
